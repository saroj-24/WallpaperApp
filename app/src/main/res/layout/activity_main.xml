<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#293462"
    tools:context=".MainActivity">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="10dp"
     android:layout_marginBottom="10dp"
     android:layout_marginRight="10dp"
     android:layout_marginLeft="10dp"
     android:orientation="horizontal"
     android:id="@+id/searchlayout">

     <EditText
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:hint="Search image"
         android:layout_marginTop="5dp"
         android:background="@drawable/editbutton"
         android:textColorHint="@color/white"
         android:id="@+id/edittext"
         android:padding="10dp"
         android:textColor="@color/white"/>


     <ImageButton
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_gravity="center"
         android:id="@+id/search"
         android:layout_marginLeft="-50dp"
         app:tint="@color/white"
         android:src="@drawable/ic_baseline_search_24"
         android:background="@android:color/transparent">

     </ImageButton>
 </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:id="@+id/buttomlayout"
        android:layout_below="@+id/searchlayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:layout_marginRight="5dp">


            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="50dp"
                 android:id="@+id/nature"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="5dp">
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:text="Nature"
                      android:paddingRight="20dp"
                      android:gravity="end"
                      android:fontFamily="@font/poppins_regular"
                      android:textStyle="bold"
                      android:textSize="15sp"
                      android:background="@drawable/gredientnature"
                      android:textColor="@color/white"
                      android:paddingTop="15dp"></TextView>
                
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/summerforest">

                </ImageButton>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:id="@+id/bus"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Bus"
                    android:paddingRight="20dp"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="15sp"
                    android:background="@drawable/gridentbus"
                    android:textColor="@color/white"
                    android:paddingTop="15dp"></TextView>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                     android:src="@drawable/busrun">

                </ImageButton>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:layout_marginRight="5dp">


            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:id="@+id/Car"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Car"
                    android:paddingRight="45dp"
                    android:gravity="end"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:background="#F7A4A4"
                    android:textColor="@color/white"
                    android:paddingTop="15dp"></TextView>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/carroof">

                </ImageButton>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:id="@+id/Train"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Train"
                    android:paddingRight="20dp"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="15sp"
                    android:background="#B6E2A1"
                    android:textColor="@color/white"
                    android:paddingTop="15dp"></TextView>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/trainicon">

                </ImageButton>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:layout_marginRight="5dp">


            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:id="@+id/Trending"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Trending"
                    android:paddingRight="20dp"
                    android:gravity="end"
                    android:clickable="false"
                    android:visibility="visible"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:background="@drawable/gredientending"
                    android:textColor="@color/white"
                    android:paddingTop="15dp"></TextView>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/trendingicon">

                </ImageButton>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:id="@+id/coding"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Coding"
                    android:paddingRight="20dp"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="15sp"
                    android:background="#554994"
                    android:textColor="@color/white"
                    android:paddingTop="15dp"></TextView>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/googel">

                </ImageButton>
            </androidx.cardview.widget.CardView>

        </LinearLayout>




    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/buttomlayout"
        android:padding="5dp">

    </androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>